<div class="container mt-5">
    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <h1>Lista de productos</h1>
            </div>
            <div class="col">
                <a href="/api/addProduct" class="btn btn-info" target="_blank">
                    Agregar un producto
                </a>
                <a href="/chat" class="btn btn-success">
                    Chatea con nosotros
                </a>
            </div>
        </div>
    </div>
    {{#if products}}
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{title}}</td>
                        <td>${{price}}</td>
                        <td>{{stock}}</td>
                        <td><img src="{{thumbnail}}" alt="{{title}} thumbnail" class="img-fluid" style="width: 50px;"></td>
                        <td>
                            <a href="/api/products/{{_id}}" class="btn btn-info">Ver</a>
                        </td>
                        <td>
                            <a href="/api/products/update/{{_id}}" class="btn btn-info">✏</a>
                        </td>
                        <td>
                            <a href="/api/products/delete/{{_id}}" class="btn btn-info">❌</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>No hay productos disponibles!</p>
    {{/if}}
</div>